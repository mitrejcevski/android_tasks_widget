<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mitrejcevski.widget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <provider
            android:name=".database.TasksContentProvider"
            android:authorities="com.mitrejcevski.taskscontentprovider"
            android:exported="true" > <!-- has to be changed to false and assign just specific permission -->
        </provider>

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewItemActivity"
            android:label="@string/edit_task_label" />
        <activity
            android:name=".activity.QuickTaskAdder"
            android:label="@string/new_task_label"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activity.AlarmReceiverActivity"
            android:label="@string/task_reminder_label"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".activity.NewGroupActivity"
            android:label="@string/menu_add_group"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activity.GroupsListActivity"
            android:label="@string/menu_group_management" />

        <receiver
            android:name=".provider.ListWidget"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_widget_provider" />
        </receiver>

        <service
            android:name=".provider.MyWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>