<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mitrejcevski.widget"
          android:versionCode="1"
          android:versionName="1.0">

    <!-- OS related definitions -->
    <uses-sdk
            android:minSdkVersion="11"
            android:targetSdkVersion="17"/>

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- Basic Application Definition -->
    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Application.Theme">

        <!-- Database Content Provider -->
        <provider
                android:name=".database.TasksContentProvider"
                android:authorities="com.mitrejcevski.taskscontentprovider"
                android:exported="true"> <!-- has to be changed to false and assign just specific permission -->
        </provider>

        <!-- Main Application Activity (Launcher) -->
        <activity
                android:name=".activity.MainActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Activity for adding new tasks -->
        <activity
                android:name=".activity.NewItemActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/edit_label"/>

        <!-- Activity for quick tasks adding -->
        <activity
                android:name=".activity.QuickTaskAdder"
                android:label="@string/new_task_label"
                android:configChanges="orientation|screenSize"
                android:theme="@android:style/Theme.Holo.Light.Dialog"
                android:windowSoftInputMode="stateVisible"/>

        <!-- Activity for showing the groups -->
        <activity
                android:name=".activity.GroupsListActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/menu_group_management"/>

        <!-- Receiver used for the application widget -->
        <receiver
                android:name=".provider.ListWidget"
                android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/my_widget_provider"/>
        </receiver>

        <!-- Service used for the application widget -->
        <service
                android:name=".provider.MyWidgetService"
                android:exported="false"
                android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <!-- Alarm related  stuff-->
        <receiver android:name=".alarm.OnAlarmReceiver"/>
        <service android:name=".alarm.AlarmService"/>

    </application>

</manifest>
