<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Activity.Main.Style" parent="Match">
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/gray_default</item>
    </style>

    <style name="Activity.Main.Empty.Style" parent="Match.Wrap">
        <item name="android:layout_marginTop">@dimen/general_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Activity.Main.ListCard.Style" parent="Match.Wrap">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Activity.Main.ListItem.Separator.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/separator_gray</item>
        <item name="android:layout_marginLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/list_item_padding_horizontal</item>
    </style>

    <style name="Activity.Main.ListItem.Style" parent="Match.Wrap">
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Activity.Main.ListItem.Big.Style" parent="Activity.Main.ListItem.Style">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Activity.Main.ListItem.Small.Style" parent="Activity.Main.ListItem.Style">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Activity.Main.ListItem.Commands.Style" parent="@style/Match.Wrap">
        <item name="android:layout_marginTop">@dimen/list_item_padding_vertical</item>
        <item name="android:padding">@dimen/global_horizontal_margin</item>
    </style>

    <style name="Activity.Main.ListItem.Button.Style" parent="Match.Wrap">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/list_item_action_selector</item>
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="Activity.Main.ListItem.Separator.Vertical.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">@dimen/list_item_vertical_separator_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/separator_gray</item>
    </style>

</resources>