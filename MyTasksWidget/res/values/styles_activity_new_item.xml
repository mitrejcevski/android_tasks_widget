<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Activity.NewItem.Style" parent="Match">
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:background">@color/gray_default</item>
    </style>

    <style name="Activity.NewItem.Card.Style" parent="Match.Wrap">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Activity.NewItem.Separator.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/separator_gray</item>
    </style>

</resources>