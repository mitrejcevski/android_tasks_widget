<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Activity.Main.Style">

    <ListView
            android:id="@+id/groups_list"
            style="@style/Match"
            android:divider="@color/gray_default"
            android:dividerHeight="@dimen/general_padding"
            android:visibility="gone"
            android:scrollbarThumbVertical="@drawable/custom_scroll_bar"/>

    <RelativeLayout
            android:id="@+id/empty"
            android:background="@color/white"
            style="@style/Match.Wrap">

        <TextView
                android:id="@+id/empty_title"
                style="@style/Activity.Main.ListItem.Big.Style"
                android:text="@string/no_groups_label"/>

        <View
                android:id="@+id/empty_separator"
                style="@style/Activity.Main.ListItem.Separator.Style"
                android:layout_below="@+id/empty_title"/>

        <Button
                android:id="@+id/empty_new_group_button"
                android:layout_below="@+id/empty_separator"
                android:layout_alignLeft="@+id/empty_separator"
                android:layout_alignRight="@+id/empty_separator"
                android:padding="@dimen/global_vertical_margin"
                style="@style/Activity.Main.ListItem.Button.Style"
                android:text="@string/add_new_group_label"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/global_vertical_margin"
                android:layout_below="@+id/empty_new_group_button"/>

    </RelativeLayout>

</LinearLayout>