<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/task_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_vertical_margin"
        android:ems="10"
        android:hint="@string/new_task_hint" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_vertical_margin"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/checkbox_reminder_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/set_reminder_checkbox_label" />
    </LinearLayout>

    <Button
        android:id="@+id/date_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_horizontal_margin"
        android:layout_marginRight="@dimen/global_horizontal_margin"
        android:layout_marginTop="@dimen/global_vertical_margin" />

</LinearLayout>