<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widgetHeaderHeight">

    <TextView
        android:id="@+id/m_row_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/m_row_date"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/defaultHorizontalMargin"
        android:singleLine="true"
        android:text="@string/applicationName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/m_row_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/defaultHorizontalMargin"
        android:singleLine="true"
        android:text="@string/applicationName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>