<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Activity.NewItem.Style" parent="Match">
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:background">@color/defaultGray</item>
    </style>

    <style name="Activity.NewItem.Card.Style" parent="Match.Wrap">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Activity.NewItem.Separator.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separatorHeight</item>
        <item name="android:background">@color/separatorGray</item>
    </style>

    <style name="Activity.NewItem.View.General.Style" parent="Match.Wrap">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Activity.NewItem.TaskTitle.Style" parent="Activity.NewItem.View.General.Style">
        <item name="android:layout_marginTop">@dimen/defaultVerticalMargin</item>
        <item name="android:hint">@string/hintNewTas</item>
    </style>

    <style name="Activity.NewItem.TaskGroup.Style" parent="Activity.NewItem.View.General.Style">
        <item name="android:layout_marginTop">@dimen/defaultVerticalMargin</item>
    </style>

    <style name="Activity.NewItem.Reminder.Style" parent="Activity.NewItem.View.General.Style">
        <item name="android:layout_marginTop">@dimen/defaultVerticalMargin</item>
        <item name="android:textOff">@string/labelSetReminderCheckbox</item>
        <item name="android:textOn">@string/labelSetReminderCheckbox</item>
    </style>

</resources>