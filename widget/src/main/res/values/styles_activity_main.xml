<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Activity.Main.Style" parent="Match">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/defaultGray</item>
    </style>

    <style name="Activity.Main.Empty.Style" parent="Match.Wrap">
        <item name="android:layout_marginTop">@dimen/defaultPadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Activity.Main.ListCard.Style" parent="Match.Wrap">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Activity.Main.ListItem.Separator.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separatorHeight</item>
        <item name="android:background">@color/separatorGray</item>
        <item name="android:layout_marginLeft">@dimen/listItemHorizontalPadding</item>
        <item name="android:layout_marginRight">@dimen/listItemHorizontalPadding</item>
    </style>

    <style name="Activity.Main.ListItem.Style" parent="Match.Wrap">
        <item name="android:paddingLeft">@dimen/listItemHorizontalPadding</item>
        <item name="android:paddingRight">@dimen/listItemHorizontalPadding</item>
        <item name="android:paddingTop">@dimen/listItemVerticalPadding</item>
        <item name="android:paddingBottom">@dimen/listItemVerticalPadding</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="Activity.Main.ListItem.Big.Style" parent="Activity.Main.ListItem.Style">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Activity.Main.ListItem.Small.Style" parent="Activity.Main.ListItem.Style">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Activity.Main.ListItem.Commands.Style" parent="@style/Match.Wrap">
        <item name="android:layout_marginTop">@dimen/listItemVerticalPadding</item>
        <item name="android:padding">@dimen/defaultHorizontalMargin</item>
    </style>

    <style name="Activity.Main.ListItem.Separator.Vertical.Style" parent="@style/Match.Wrap">
        <item name="android:layout_width">@dimen/listItemVerticalSeparatorWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/separatorGray</item>
    </style>

    <style name="SideMenu.Container.Style" parent="Match">
        <item name="android:layout_width">@dimen/sideMenuWidth</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>